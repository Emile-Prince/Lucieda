{% extends 'base.html.twig' %}

{% block body %}

<section class="my-5">

  <!-- Section heading -->
  <h2 class="h1-responsive font-weight-bold text-center my-5">Formulaire de Contact</h2>
  <!-- Section description -->
  <p class="text-center w-responsive mx-auto pb-5" style=" font-style : italic">Vous voulez en savoir plus sur cette plateforme ou avez des questions voir propositions ou remarques, contactez-nous en utilisant le formulaire de cette page. </p>

  <br/>

  <!-- Grid row -->
  <div class="row">

    <!-- Grid column -->
    <div class="col-lg-5 mb-lg-0 mb-4">

      <!-- Form with header -->
      <div class="card">
        <div class="card-body">
          <!-- Header -->
          <!-- Body -->
          <div class="md-form">
            <i class="fa fa-user prefix grey-text"></i>
            <label for="form-name">Votre nom</label>
            <input type="text" id="form-name" class="form-control">
          </div>

          <div class="md-form">
            <i class="fa fa-envelope prefix grey-text"></i>
            <label for="form-email">Votre Mail</label>
            <input type="text" id="form-email" class="form-control">
          </div>

          <div class="md-form">
            <i class="fa fa-tag prefix grey-text"></i>
            <label for="form-Subject">Objet</label>
            <input type="text" id="form-Subject" class="form-control">
          </div>

          <div class="md-form">
            <i class="fa fa-pencil prefix grey-text"></i>
            <label for="form-text">Votre message</label>
            <textarea type="text" id="form-text" class="form-control md-textarea" rows="3"></textarea>
          </div>

          <br/>

          <div class="text-center">
            <button class="btn btn-light-blue">Envoyer</button>
          </div>

        </div>
      </div>
      <!-- Form with header -->

    </div>
    <!-- Grid column -->

    <!-- Grid column -->
    <div class="col-lg-7">

      <!-- Google map-->
      <div id="map-container" class="rounded z-depth-1-half map-container" style="height: 400px"></div>
      <br>
      <!-- Buttons-->
    </div>
    <!-- Grid column -->

  </div>
  <!-- Grid row -->

</section>
<!-- Section: Contact v.1 -->
{% endblock %}